<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project I</title>
    <link rel="stylesheet" href="./styles.css">
    
</head>
<body>
    <div class="container">
        <h1>Image recognition using AWS Rekognition</h1>

        <% if (imageUrl) { %>
            <img src="<%= imageUrl %>" alt="Uploaded Image" style="max-width: 100%; height: auto; margin-top: 10px;">
        <% } %>

        <form action="/upload" method="POST" enctype="multipart/form-data">
            <div>
                <label for="image">Upload an Image</label>
                <input type="file" name="image" id="image" accept="image/*" required>
            </div>
            <button type="submit">Upload and Analyze</button>
        </form>

        <% if (error) { %>
            <p class="error"><%= error %></p>
        <% } %>

            

        <% if (labels && labels.length > 0) { %>
            <h2>Detected Labels</h2>
            <ul>
                <% labels.forEach(label => { %>
                    <li><strong><%= label.Name %></strong>: Certainity: <%= label.Confidence.toFixed(2) %> %</li>
                <% }) %>
            </ul>
        <% } %>
    </div>
    
</body>
</html>
